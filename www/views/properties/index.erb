<% @properties.each do |property| %>
<div class="row collapse admin-listing">
  <div class="large-7 columns">
    <h3>Property Name <%= property.property_name %></h3>
  </div>
  <div class="large-2 columns">
    <form id="form_id" action="/admin/properties/<%= property.id %>/status" method="post">
      <input type="hidden" name="_method" value="PATCH">
      <div class="stat-wrap">
        <input type="checkbox" name="property[for_sale]" <%= 'checked' if property.for_sale %>><p>For Sale</p><img src="/img/house-svg-09.svg">
      </div>
      <div class="stat-wrap">
        <input type="checkbox" name="property[for_rent]" <%= 'checked' if property.for_rent %>><p>For Rent</p><img src="/img/sun-09.svg">
      </div>
      <!-- <div class="stat-wrap">
        <input type="checkbox" checked><p>Hide</p><img src="/img/hidden-02.svg">
      </div> -->
      </div>
  <div class="large-1 columns">
    <button type="submit">UPDATE</button>
  </div>
</form>
  <div class="large-2 columns">
    <form class="" action="/admin/properties/<%= property.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this property?')">
      <input type="hidden" name="_method" value="DELETE">
      <!-- <button onclick="document.getElementById('are-you-sure').style.display = 'inline'" style="background: red;">DELETE</button> -->
      <button style="background: red;">DELETE</button>
    </form>
    <a href="/admin/properties/<%= property.id %>/edit-sale-profile"><button style="background: #60c650;">EDIT</button></a>
  </div>
</div>
<% end %>

