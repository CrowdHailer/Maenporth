<% @activities.each do |activity| %>
<div class="row collapse admin-listing">
  <div class="large-10 columns">
    <h3><%= activity.activity_name %></h3>
  </div>

  <div class="large-2 columns">
    <form class="" action="/admin/activities/" method="post" onsubmit="return confirm('Are you sure you want to delete this activity?')">
      <input type="hidden" name="_method" value="DELETE">
      <button style="background: red;">DELETE</button>
    </form>
    <a href="/admin/activities/<%= activity.id %>/edit"><button style="background: #60c650;">EDIT</button></a>
  </div>
</div>
<% end %>
