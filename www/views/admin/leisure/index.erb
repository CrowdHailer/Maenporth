<section id="admin-nav">
  <div class="row collapse">
    <ul>
      <li><a href="/admin/properties">Holiday Homes</a></li>
      <li><a href="/admin/properties/new">Add Property</a></li>
      <li><a href="/admin/leisure">Leisure</a></li>
      <li><a href="/admin/leisure/new">Add Activity</a></li>
      <li><a href="/admin/leisure/offers">Offer Codes</a></li>
    </ul>
  </div>
</section>

<div class="row collapse admin-list">
  <div class="large-9 columns">
    <h2>Leisure Activities</h2>
  </div>
  <div class="large-3 columns">
    <a href="/admin/leisure/new"><button>Create New Activity +</button></a>
  </div>
</div>

<% @categories.each do |category, activities| %>
<div class="row collapse">
  <div class="admin-cat">
    <h2><%= category.name %></h2>
  </div>
</div>

<% activities.each do |activity| %>
<div class="row collapse admin-listing">
  <div class="large-10 columns">
    <h3><%= activity.activity_name %> <% if activity.hidden? %><small>hidden</small><% end %></h3>
  </div>

  <div class="large-2 columns">
    <form class="" action="/admin/leisure/<%= activity.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this activity? All associated offers will be deleted.')">
      <input type="hidden" name="_method" value="DELETE">
      <button style="background: red;">DELETE</button>
    </form>
    <a href="/admin/leisure/<%= activity.id %>/edit"><button style="background: #60c650;">EDIT</button></a>
  </div>
</div>
<% end %>
<% end %>
